<!DOCTYPE html>
<html>
<head>
    <link rel="shortcut icon" type="image/x-icon" href="~/Assets/IMAGES/favicon.ico">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - All Great Films</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Assets/newTemplate/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Plugins -->
    <link href="~/Assets/NewTemplate/css/simpletextrotator.css" rel="stylesheet" type="text/css">
    <link href="~/Assets/NewTemplate/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="~/Assets/NewTemplate/css/et-line-font.css" rel="stylesheet" type="text/css">
    <link href="~/Assets/NewTemplate/css/magnific-popup.css" rel="stylesheet" type="text/css">
    <link href="~/Assets/NewTemplate/css/flexslider.css" rel="stylesheet" type="text/css">
    <link href="~/Assets/NewTemplate/css/animate.css" rel="stylesheet" type="text/css">

    <!-- Template core CSS -->
    <link href="~/Assets/NewTemplate/css/style.css" rel="stylesheet">

    <!-- Custom css -->
    <link href="~/Assets/NewTemplate/css/custom.css" rel="stylesheet">

</head>
<body>
    <!-- PRELOADER -->
    <div class="page-loader">
        <div class="loader">Loading...</div>
    </div>
    <!-- /PRELOADER -->

    <!-- NAVIGATION -->
    <nav class="navbar navbar-custom navbar-transparent navbar-fixed-top" role="navigation">

        <div class="container">


            <div class="navbar-header">

                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#custom-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="index.html"><img src="~/Assets/NewTemplate/images/agf_logo_light_full.png" style="margin-top:-7px;">
            </div>

            <div class="collapse navbar-collapse" id="custom-collapse">

                <ul class="nav navbar-nav navbar-right">
                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("admin"))
                        {
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Admin Actions <b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Add Movie", "Create", new { Controller = "MovieAdd", Area = "Admin" })</li>
                                    <li>@Html.ActionLink("View Users", "Index", new { Controller = "ListCategory", Area = "Admin" })</li>
                                    <li>@Html.ActionLink("Add Director", "Create", new { Controller = "Director", Area = "Admin" })</li>
                                    <li>@Html.ActionLink("Add Actor", "Create", new { Controller = "Actor", Area = "Admin" })</li>
                                    <li>@Html.ActionLink("Add Writer", "Create", new { Controller = "Writer", Area = "Admin" })</li>




                                    <li> @User.Identity.Name.ToString())</li>
                                    <li> @Html.ActionLink("SignOut", "SignOut", new { Controller = "Login", Area = "Security" })</li>

                                </ul>
                            </li>

                        }

                        if (User.IsInRole("user"))
                        {
                            <li>@Html.ActionLink("Movies", "HomeList", new { Controller = "HomeList", Area = "Users" })</li>

                            <li>@Html.ActionLink("Random", "Random", new { Controller = "Random", Area = "Users" })</li>

                            <li>@Html.ActionLink("Agf 100", "AGF100", new { Controller = "AGF100", Area = "Users" })</li>

                            <li>@Html.ActionLink("Add a Film", "Agf100", new { Controller = "HomeList", Area = "Common" })</li>

                            <li>@Html.ActionLink("Contact", "Agf100", new { Controller = "HomeList", Area = "Common" })</li>



                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">@User.Identity.Name.ToString()<b class="caret"></b></a>
                                <ul class="dropdown-menu">

                                    <li>@Html.ActionLink("Profile", "UserProfile", new { Controller = "UserProfile", Area = "Users" })</li>


                                    <li>@Html.ActionLink("Signout", "SignOut", new { Controller = "Login", Area = "Security" })</li>
                                </ul>
                            </li>

                        }
                    }
                    else
                    {
                        <li>@Html.ActionLink("Movies", "HomeList", new { Controller = "HomeList", Area = "Common" })</li>

                        <li>@Html.ActionLink("Random", "Random", new { Controller = "Random", Area = "Common" })</li>

                        <li>@Html.ActionLink("Agf 100", "AGF100", new { Controller = "AGF100", Area = "Common" })</li>

                        <li>@Html.ActionLink("Add a Film", "Agf100", new { Controller = "HomeList", Area = "Common" })</li>

                        <li>@Html.ActionLink("Contact", "Agf100", new { Controller = "HomeList", Area = "Common" })</li>


                        <li style="color:#39aea9">@Html.ActionLink("Register", "Register", new { Controller = "Register", Area = "Security" })</li>

    <li>
        <a href="#" data-toggle="modal" data-target="#login-modal"
           style="color:#39aea9; font-weight:200">
            <span aria-hidden="true" class="icon-lock" style="margin-right:2px;"></span>Login
        </a>
    </li>                    }



                </ul>
                @if (!User.Identity.IsAuthenticated)
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li><div class="fb-like" data-href="http://linkhub.manzoorthetrainer.com/" data-layout="standard" data-action="like" data-show-faces="false" data-share="true"></div></li>
                    </ul>
                }




            </div>

        </div>

    </nav>
    <!-- /NAVIGATION -->


    <div id="wrapper">
        @RenderBody()

    </div>

    <footer class="footer">

        <div class="container">

            <div class="row">

                <div class="col-sm-12 text-center">
                    <p class="copyright font-inc m-b-0"><span><img src="~/Assets/NewTemplate/images/agf_small.gif" alt="" style="width:48px"></span>   © 2015  ALL GREAT FILMS</a>,All Rights Reserved.</p>
                </div>

            </div>

        </div>

    </footer>

    <!-- Scroll-up -->
    <div class="scroll-up">
        <a href="#totop"><i class="fa fa-angle-double-up"></i></a>
    </div>

    <!-- Javascript files -->
    <script src="~/Assets/NewTemplate/js/jquery-2.1.3.min.js"></script>
    <script src="~/Assets/NewTemplate/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Assets/NewTemplate/js/jquery.mb.YTPlayer.min.js"></script>
    <script src="~/Assets/NewTemplate/js/appear.js"></script>
    <script src="~/Assets/NewTemplate/js/jquery.simple-text-rotator.min.js"></script>
    <script src="~/Assets/NewTemplate/js/jqBootstrapValidation.js"></script>
    <script src="http://maps.google.com/maps/api/js?sensor=true"></script>
    <script src="~/Assets/NewTemplate/js/gmaps.js"></script>
    <script src="~/Assets/NewTemplate/js/isotope.pkgd.min.js"></script>
    <script src="~/Assets/NewTemplate/js/imagesloaded.pkgd.js"></script>
    <script src="~/Assets/NewTemplate/js/jquery.flexslider-min.js"></script>
    <script src="~/Assets/NewTemplate/js/jquery.magnific-popup.min.js"></script>
    <script src="~/Assets/NewTemplate/js/jquery.fitvids.js"></script>
    <script src="~/Assets/NewTemplate/js/smoothscroll.js"></script>
    <script src="~/Assets/NewTemplate/js/wow.min.js"></script>
    <script src="~/Assets/NewTemplate/js/contact.js"></script>
    <script src="~/Assets/NewTemplate/js/custom.js"></script>
    <script>

        $(window).scroll(function () {
            if ($(".navbar").offset().top > 50) {
                $('#custom-nav').addClass('affix');
                $(".navbar-fixed-top").addClass("top-nav-collapse");
                $('.navbar-brand img').attr('src', '/assets/NewTemplate/images/agf_logo_dark_full.png', 'style="margin-top:-7px'); //change src
                /*        $('#login-modal').modal().fadeOut();
                        $(".modal-backdrop").remove();*/

            } else {
                $('#custom-nav').removeClass('affix');
                $(".navbar-fixed-top").removeClass("top-nav-collapse");
                $('.navbar-brand img').attr('src', '/assets/NewTemplate/images/agf_logo_light_full.png');
            }
        });
    </script>
</body>
</html>