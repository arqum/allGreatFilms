@model IEnumerable<AllGreatFilms.BusinessLayer.ViewModels.homeList_vm>


@{
    int i = 0;
    string gen = "";
}


<div class="animated fadeIn container">
    <ul class="moods-list">

        @foreach (var item in Model)
        {
            i = i + 1;

            
            <li class="col-md-3">
                <input type="checkbox" name="checkbox" value="@Html.DisplayFor(modelItem => item.Moods)" id=@i class="css-checkbox" />
                <label for=@i class="css-label">@Html.DisplayFor(modelItem => item.Moods) - @i </label>
            </li>
        }

    </ul>

    <div class="row" id="moodsPanel">
        <div class="col-md-12" style="padding-left: 0px;">
            <button class="btn btn-default btn-circle" onclick="genreFilter('M')" style="margin-left:0px"> Apply</button>
        </div>
    </div>
</div>

