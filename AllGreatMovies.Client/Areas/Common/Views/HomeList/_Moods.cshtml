{
    i = i + 1;


    <div style="align-content:center; margin-left:10%;  margin-top:20px" class="animated fadeIn">
        <ul style="list-style-type:none;  display:block; ">
            <li style="float:left; width: 25%;">
                <input type="checkbox" name="checkbox" value="@Html.DisplayFor(modelItem => item.Moods)" id=@i class="css-checkbox" />
