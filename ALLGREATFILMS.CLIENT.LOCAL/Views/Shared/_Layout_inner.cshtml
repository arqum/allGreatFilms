<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - All Great Films</title>

    <link href="~/Assets/CSS/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Assets/CSS/font-awesome.css" rel="stylesheet" type="text/css" />
    <link href="~/Assets/CSS/animate.css" rel="stylesheet" type="text/css" />
    <link href="~/Assets/CSS/lightslider.css" rel="stylesheet" type="text/css" />
    <link href="~/Assets/CSS/flexslider.css" rel="stylesheet" type="text/css" />
    <link href="~/Assets/CSS/agf_custom.css" rel="stylesheet" type="text/css" />

    <link href="http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" rel="stylesheet" />





</head>
<body class="animated fadeIn">
    <nav class="navbar navbar-fixed-top navbar-default navigation-clean-button">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand navbar-link" href="#"><img src="~/Assets/IMAGEs/agf_logo.png"></a>
                <button class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navcol-1"><span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span></button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">


                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("admin"))
                        {
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Admin Actions <b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Add Movie", "Index", new { Controller = "MovieAdd", Area = "Admin" })</li>
                                    <li>@Html.ActionLink("View Users", "Index", new { Controller = "ListCategory", Area = "Admin" })</li>
                                    <li> @User.Identity.Name.ToString())</li>
                                    <li> @Html.ActionLink("SignOut", "SignOut", new { Controller = "Login", Area = "Security" })</li>

                                </ul>
                            </li>
                        }

                        if (User.IsInRole("user"))
                        {
                            <li>@Html.ActionLink("Movies", "HomeList", new { Controller = "HomeListController", Area = "Common" })</li>

                            <li>@Html.ActionLink("Random", "Random", new { Controller = "HomeListController", Area = "Common" })</li>

                            <li>@Html.ActionLink("Agf 100", "Agf100", new { Controller = "HomeListController", Area = "Common" })</li>

                            <li>@Html.ActionLink(@User.Identity.Name.ToString(), "UserProfile", new { Controller = "UserActionsController", Area = "Users" })</li>


                            <li>@Html.ActionLink("SignOut", "SignOut", new { Controller = "Login", Area = "Security" })</li>

                        }
                    }
                    else
                    {
                        <li>@Html.ActionLink("Movies", "HomeList", new { Controller = "HomeListController", Area = "Common" })</li>

                        <li>@Html.ActionLink("Random", "Random", new { Controller = "HomeListController", Area = "Common" })</li>

                        <li>@Html.ActionLink("Agf 100", "Agf100", new { Controller = "HomeListController", Area = "Common" })</li>


                        <li>@Html.ActionLink("Register", "Index", new { Controller = "Register", Area = "Security" })</li>
                        <li><a href="/Security/Login">Login</a></li>
                    }


                </ul>
                @if (!User.Identity.IsAuthenticated)
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li><div class="fb-like" data-href="http://linkhub.manzoorthetrainer.com/" data-layout="standard" data-action="like" data-show-faces="false" data-share="true"></div></li>
                    </ul>
                }
            </div>
        </div>
    </nav>
    <div class="wrapper">
        <div class="content_inner">
            @RenderBody()
        </div>
    </div>


    @*<footer>
            <div class="container">
                <p><img src="~/Assets/IMAGES/agf_small.gif" height="80" width="80" />Copyright 2016. AllGreatFilms. All Rights Reserved.</p>
            </div>
        </footer>*@

    <script src="~/Assets/JAVASCRIPT/jquery-1.10.2.min.js"></script>
    <script src="~/Assets/JAVASCRIPT/bootstrap.min.js"></script>
    <script src="~/Assets/JAVASCRIPT/lightslider.min.js"></script>
    <script src="~/Assets/JAVASCRIPT/jquery.flexslider.js"></script>
    <script src="~/Scripts/toastr.min.js"></script>
    <script src="~/Scripts/toastr.js"></script>
    <script src="~/Assets/JAVASCRIPT/toastr.js"></script>
    <script src="~/Assets/JAVASCRIPT/toastr.min.js"></script>

    <script>
        $(document).ready(function () {

            $('.flexslider').flexslider({
                animation: "slide"
            });
            
        });
    </script>
</body>
</html>