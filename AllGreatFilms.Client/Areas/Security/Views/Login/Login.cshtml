

@model AllGreatFilms.BusinessLayer.UserAccess
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="login-clean">
    <div class="login-inner">
        <div class="login-header">
            <h2 class="sr-only">Login Form</h2>
            <p>We recommend great movies to you.</p>
            <p>Strictly, great movies!</p>
        </div>
        <div class="login-body">
            <h3>
                Members Login
            </h3>

            @using (Html.BeginForm("login", "login", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.TextBox("email", "", new { type = "email", placeholder = "Email", @class = "form-control" })

                    @*<input class="form-control" type="email" name="email" placeholder="Email">*@
                </div>
                <div class="form-group">
                    @Html.TextBox("password", "", new { type = "password", placeholder = "Password", @class = "form-control" })
                    @*<input class="form-control" type="password" name="password" placeholder="Password">*@
                </div>
                <div class="form-group">
                    <label class="rememberme">
                        <input type="checkbox"> Remember me
                    </label>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit" id="btnLogin">LogIn</button>
                </div>
                <a href="#" class="forgot">Forgot your email or password?</a>
            }
